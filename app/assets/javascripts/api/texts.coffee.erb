ready = ->

  if $('#alerts').css('display') == 'block'
    alerts = localStorage.getItem('alerts') or 'false'
    console.log localStorage.getItem('alerts')
    console.log 'initial Alerts: '
    console.log alerts
    if alerts != 'false'
      $('#alertBox').css display: 'block'
      console.log 'display should be block'
    else
      $('#alertBox').css display: 'none'
      console.log 'display should be none'
    # $('#alertBox').show()
    console.log alerts
  else
    $('#alertBox').css display: 'none'



  $("#alerts, #alertListClose").click ->
      #$("#alertBox").toggle("slow")
      if $('#alertBox').css('display') != 'none'

        $('#alertBox').css display: 'none'
        console.log 'display is now none'
        localStorage.setItem('alerts', 'false')
      else
        $('#alertBox').css display: 'block'
        console.log 'display is now visible'
        localStorage.setItem('alerts', 'true')

      console.log 'isVisible: '
      console.log localStorage.getItem('alerts')


      return

  return





$(document).on('turbolinks:load', ready)
