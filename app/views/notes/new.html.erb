<%= render partial: 'layouts/standings' %>



<div class='col-xs-12mod col-sm-12mod col-md-12mod main-div grass'>

  <h2>Create a Note</h2>

  <div class="row">
    <div class="col-md-8">
      <%= form_for @note, url: team_notes_path(@team.id) do |f| %>
        <% if @note.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@note.errors.count, "error") %>.</hr>
              <ul>
                <% @note.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <%= form_group_tag(@note.errors[:content]) do %>
          <%= f.label :content %>
          <%= f.text_field :content, autofocus: true, class: 'form-control', placeholder:"Enter your note here." %>
        <% end %>

        <div class="form-group">
          <%= f.submit "Submit", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
