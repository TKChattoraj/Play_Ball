      <table class="table table-responsive score-table">
        <thead>
          <tr>
            <th></th>
            <th><h3 class='team-score'>R</h3></th>
            <th><h3 class='team-socre'>H</h3></th>
            <th><h3 class='team-score'>E</h3></th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <td>
                <h3 class='team-score'><%= @game.visitors.name %></h3>
              </td>
              <td> <h3 class='team-score'>
                  <%= @game.visitor_runs %>
                </h3>
              </td>
              <td><h3 class='team-score'><%= @game.visitor_hits %> </h3>
              </td>
              <td><h3 class='team-score'><%= @game.visitor_errors %></h3>
