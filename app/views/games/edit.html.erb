<%= form_tag(game_path, method: "put") do %>
  <div class='form-group col-md-12'>
    <%= fields_for 'game', @game do |g| %>

        <div class= 'col-md-12'>
        <row class='col-md-6'>
          <div class='col-md-4'>
            <h1 class='team-score'><%= @game.visitors.name %></h1>
          </div>
          <div class='col-md-8'>
            <div class='col-md-4'>
              <%= g.number_field :visitor_runs, class: 'form-control'%>
            </div>
            <div class='col-md-4'>
              <%= g.number_field :visitor_hits, class: 'form-control'%>
            </div>
            <div class='col-md-4'>
              <%= g.number_field :visitor_errors, class: 'form-control'%>
            </div>
          </div>
        </row>
        </div>

        <div class='col-md-12'>
        <row class='col-md-6'>
          <div class='col-md-4'>
            <h1 class='team-score'><%= @game.home.name %></h1>
          </div>
          <div class='col-md-8'>
            <div class='col-md-4'>
              <%= g.number_field :home_runs, class: 'form-control'%>
            </div>
            <div class='col-md-4'>
              <%= g.number_field :home_hits, class: 'form-control'%>
            </div>
            <div class='col-md-4'>
              <%= g.number_field :home_errors, class: 'form-control'%>
            </div>
          </div>
        </row>
        </div>
    <% end %>
  </div>

          <row class='col-md-12 left-margin-10px'>
            <div class='col-md-6 stats-table'>
              <div class='col-md-2'>Name</div>
              <div class='col-md-10 stats-table'>
                <div class="col-md-1">
                  <p>AB</p>
                </div>
                <div class="col-md-1">
                  <p>PA</p>
                </div>
                <div class="col-md-1">
                  <p>1b</p>
                </div>
