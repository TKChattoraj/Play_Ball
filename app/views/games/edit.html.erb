                  <p>HB</p>
                </div>
                <div class="col-md-1">
                  <p>WP</p>
                </div>
                <div class="col-md-1">
                  <p>PB</p>
                </div>
              </div>
            </div>
            <div class='col-md-6 stats-table'>
              <div class='col-md-12 stats-table'>
                <div class="col-md-1">
                  <p>SB</p>
                </div>
                <div class="col-md-1">
                  <p>RBI</p>
                </div>
                <div class="col-md-1">
                  <p>R</p>
                </div>
                <div class="col-md-1">
                  <p>ER</p>
                </div>
                <div class="col-md-1">
                  <p>SAC</p>
                </div>
                <div class="col-md-1">
                  <p>K</p>
                </div>
              </div>
            </div>

          </row>

  <!-- <row class='col-md-12'> -->
    <% @players.each_with_index do  |player, i| %>
      <%= fields_for 'players[]', player do |p| %>
      <!-- -->
        <% player_hitting_stats = player.game_hitting_stats.find{|hs| hs.game_id == @game.id} %>
        <% if player_hitting_stats %>
          <%= p.hidden_field(:id) %>
          <%= fields_for 'game_hitting_stats[]', player_hitting_stats do |f| %>
            <row class='col-md-12 left-margin-10px'>
              <div class='col-md-6 stats-table'>
                <div class='col-md-2'> <%= player.last_name %> </div>
                <div class='col-md-10 stats-table'>
                      <%= f.text_field :ab, class: 'col-md-1' %>
                      <%= f.text_field :pa, class: 'col-md-1'%>
                      <%= f.text_field :single, class: 'col-md-1' %>
                      <%= f.text_field :double, class: 'col-md-1'%>
                      <%= f.text_field :triple, class: 'col-md-1' %>
                      <%= f.text_field :hr, class: 'col-md-1'%>
                      <%= f.text_field :bb, class: 'col-md-1' %>
                      <%= f.text_field :error, class: 'col-md-1'%>
                      <%= f.text_field :fc, class: 'col-md-1' %>
                      <%= f.text_field :hb, class: 'col-md-1'%>
                      <%= f.text_field :wp, class: 'col-md-1' %>
                      <%= f.text_field :pb, class: 'col-md-1'%>
                </div>
              </div>
              <div class='col-md-6 stats-table'>
                <div class='col-md-12 stats-table'>
                      <%= f.text_field :sb, class: 'col-md-1' %>
                      <%= f.text_field :rbi, class: 'col-md-1'%>
                      <%= f.text_field :r, class: 'col-md-1' %>
                      <%= f.text_field :earned_run, class: 'col-md-1'%>
                      <%= f.text_field :sac, class: 'col-md-1' %>
                      <%= f.text_field :k, class: 'col-md-1'%>
                </div>
              </div>
            </row>
          <% end %>
         <% end %>

      <% end %>
    <% end %>




    <row class='col-md-12 left-margin-10px'>
      <div class='col-md-6 stats-table'>
