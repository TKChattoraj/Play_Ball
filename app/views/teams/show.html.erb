<row class='col-md-12 left-margin-10px stats-table'>
  <h3 class="left-margin-10px"><%= "#{@team.name}" %></h3>


  <div class="row left-margin-10px">
    <div class="col-md-12">
      <h4 class="stats-heading">Notes:</h4>
      <% @notes.each do |n| %>
      <h4 class="stats-heading"><%= n.content %></h4> <p>Created by <%= User.find(n.user_id).first_name %> on <%= n.created_at %></p>
      <% end %>
    </div>
  </div>
</row>

<row class='col-md-12 left-margin-10px stats-table'>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
            <th>Hitting</th>
            <th>G</th>
            <th>PA</th>
            <th>AB</th>
            <th>H</th>
            <th>1b</th>
            <th>2b</th>
            <th>3b</th>
            <th>Hr</th>
            <th>BB</th>
            <th>E</th>
            <th>FC</th>
            <th>HB</th>
            <th>SB</th>
            <th>RBI</th>
            <th>R</th>
            <th>ER</th>
            <th>SAC</th>
            <th>K</th>
            <th>AVE.</th>
            <th>OBP</th>
            <th>SLG</th>
      </tr>
    </thead>
    <tbody>
    <% @players.each do |p| %>
      <tr>
        <td><p><%= link_to "#{p.last_name}, #{p.first_name}", p %></p></td>
        <td><%= p.hitting_total.g %></td>
        <td><%= p.hitting_total.pa %></td>
        <td><%= p.hitting_total.ab %></td>
        <td><%= p.hitting_total.h %></td>
        <td><%= p.hitting_total.b1 %></td>
        <td><%= p.hitting_total.b2 %></td>
        <td><%= p.hitting_total.b3 %></td>
        <td><%= p.hitting_total.hr %></td>
        <td><%= p.hitting_total.bb %></td>
        <td><%= p.hitting_total.err %></td>
        <td>-</td>
        <td><%= p.hitting_total.hb %></td>
        <td><%= p.hitting_total.sb%></td>
        <td><%= p.hitting_total.rbi %></td>
        <td><%= p.hitting_total.r %></td>
        <td>-</td>
        <td><%= p.hitting_total.sf %></td>
        <td><%= p.hitting_total.k %></td>
        <td><%= number_with_precision(p.hitting_total.ave, :precision =>3) %></td>
        <td><%= number_with_precision(p.hitting_total.obp, :precision => 3) %></td>
        <td><%= number_with_precision(p.hitting_total.slg, :precision => 3) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</row>

<row class='col-md-12 left-margin-10px stats-table'>
  <table class='table table-striped table-responsive'>
    <thead>
      <tr>
          <th>Pitching</th>
          <th>ERA</th>
          <th>G</th>
          <th>IP</th>
          <th>BF</th>
          <th>Ret</th>
          <th>R</th>
          <th>ER</th>
          <th>H</th>
          <th>1B</th>
          <th>2B</th>
          <th>3B</th>
          <th>HR</th>
          <th>K</th>
          <th>BB</th>
          <th>WP</th>
          <th>HB</th>
          <th>BK</th>
          <th>SB</th>
          <th>CS</th>
          <th>W</th>
          <th>L</th>
          <th>SV</th>
          <th>CG</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |p| %>
       <% if p.pitcher? %>
          <tr>
            <td><%= link_to "#{p.last_name}, #{p.first_name}", p %></td>
            <td><%= number_with_precision(p.pitching_total.era, :precision =>3) %></td>
            <td><%= p.pitching_total.g%></td>
            <td><%= p.pitching_total.ip %></td>
            <td><%= p.pitching_total.bf %></td>
            <td><%= p.pitching_total.batters_retired %></td>
            <td><%= p.pitching_total.r %></td>
            <td><%= p.pitching_total.er %></td>

            <td><%= p.pitching_total.h %></td>
            <td><%= p.pitching_total.b1 %></td>
            <td><%= p.pitching_total.b2 %></td>
            <td><%= p.pitching_total.b3 %></td>
            <td><%= p.pitching_total.hr %></td>
            <td><%= p.pitching_total.k %></td>
            <td><%= p.pitching_total.bb %></td>

            <td><%= p.pitching_total.wp%></td>
            <td><%= p.pitching_total.hb %></td>
            <td><%= p.pitching_total.bk %></td>
            <td><%= p.pitching_total.sb %></td>
            <td><%= p.pitching_total.cs %></td>

            <td><%= p.pitching_total.w %></td>
            <td><%= p.pitching_total.l %></td>

            <td><%= p.pitching_total.sv%></td>
            <td><%= p.pitching_total.cg %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</row>


