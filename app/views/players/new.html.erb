<h1>New Player</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for [@user, @player] do |p| %>
    <div class="form-group">
      <%= p.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
    </div>

    <div class="form-group">
      <%= p.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
    </div>
    <h3>Birthdate</h3>
    <div class="form-group">
      <%= p.date_field :birthdate, class: 'form-control'%>
    </div>


      <div class="form-group">
        <h3>Bats</h3>
        <row class='form-control'>
          <div class="col-md-2">
            <%= p.radio_button :bats, "bats_left"%>
          </div>
          <div class="col-md-6">
            <%= p.label :bats, "Bats Left"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.radio_button :bats, "bats_right"%>
          </div>
          <div class="col-md-6">
            <%= p.label :bats, "Bats Right"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.radio_button :bats, "switch_hitter"%>
          </div>
          <div class="col-md-6">
            <%= p.label :bats, "Switch Hitter"%>
          </div>
        </row>
      </div>

      <div class="form-group">
        <h3>Throws</h3>
        <row class='form-control'>
          <div class="col-md-2">
            <%= p.radio_button :throws, "throws_left"%>
          </div>
          <div class="col-md-6">
            <%= p.label :throws, "Throws Left"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.radio_button :throws, "throws_right"%>
          </div>
          <div class="col-md-6">
            <%= p.label :throws, "Throws Right"%>
          </div>
        </row>
      </div>


      <div class="form-group">
        <h3>Positions</h3>
        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "p" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "pitcher"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "c" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "catcher"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "1b" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "1b"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "2b" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "2b"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "3b" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "3b"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "ss" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "ss"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "of" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "of"%>
          </div>
        </row>

        <row class='form-control'>
          <div class="col-md-2">
            <%= p.check_box :positions, "old_man" %>
          </div>
          <div class="col-md-6">
            <%= p.label :positions, "old man in dugout"%>
          </div>
        </row>
      </div>






    <%= p.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
