    <div class="col-md-2">
      <% if hs.game.home == @player.team %>
        <p><%= link_to "vs. #{hs.game.visitors.name}", hs.game.visitors %></p>
      <% elsif hs.game.visitors == @player.team %>
        <p><%= link_to "vs. #{hs.game.home.name}", hs.game.home %></p>
      <% else %>
        <p>Some Team</p>
      <% end %>
    </div>
