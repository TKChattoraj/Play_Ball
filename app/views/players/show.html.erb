<h2><%= @player.first_name %></h2>
<h1><%= @player.last_name %></h1>


<div class="row left-margin-10px">
  <div class="col-md-2">
    <h4 class="stats-heading">Hitting:<h4>
  </div>
  <div class="col-md-10">
    <div class="col-md-6 stats-table">
      <div class="col-md-1">
        <p>G</p>
      </div>
      <div class="col-md-1">
        <p>PA</p>
      </div>
      <div class="col-md-1">
        <p>AB</p>
      </div>
      <div class="col-md-1">
        <p>H</p>
      </div>
      <div class="col-md-1">
        <p>BB</p>
      </div>
      <div class="col-md-1">
        <p>1B</p>
      </div>
      <div class="col-md-1">
        <p>2B</p>
      </div>
      <div class="col-md-1">
        <p>3B</p>
      </div>
      <div class="col-md-1">
        <p>HR</p>
      </div>
      <div class="col-md-1">
        <p>K</p>
      </div>
      <div class="col-md-1">
        <p>SF</p>
      </div>
      <div class="col-md-1">
        <p>ERR</p>
      </div>
    </div>
    <div class="col-md-6 stats-table">
      <div class="col-md-1">
        <p>HB</p>
      </div>
      <div class="col-md-1">
        <p>RBI</p>
      </div>
      <div class="col-md-1">
        <p>R</p>
      </div>
      <div class="col-md-1">
        <p>SB</p>
      </div>
      <div class="col-md-1">
        <p>CS</p>
      </div>
      <div class="col-md-1">
        <p>AVE</p>
      </div>
      <div class="col-md-1">
        <p>OBP</p>
      </div>
      <div class="col-md-1">
        <p>SLG</p>
      </div>
    </div>
  </div>



  <div class="col-md-2">
    <p>Season Total</p>
  </div>
  <div class="col-md-10">
    <div class="col-md-6 stats-table">
      <div class="col-md-1">
        <p><%= @player.hitting_total.g %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.pa %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.ab %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.h %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.bb %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.b1 %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.b2 %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.b3 %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.hr %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.k %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.sf %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.err %></p>
      </div>
    </div>
    <div class="col-md-6 stats-table">
      <div class="col-md-1">
        <p><%= @player.hitting_total.hb %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.rbi %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.r %></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.sb%></p>
      </div>
      <div class="col-md-1">
        <p><%= @player.hitting_total.cs %></p>
      </div>
      <div class="col-md-1">
        <p><%= number_with_precision(@player.hitting_total.ave, :precision =>3) %></p>
      </div>
      <div class="col-md-1">
        <p><%= number_with_precision(@player.hitting_total.obp, :precision => 3) %></p>
      </div>
      <div class="col-md-1">
        <p><%= number_with_precision(@player.hitting_total.slg, :precision => 3) %></p>
      </div>
    </div>
  </div>

  <% @player_hitting_stats.each do |hs| %>

    <div class="col-md-2">
      <% if hs.game.home == @player.team %>
        <p><%= link_to "vs. #{hs.game.visitors.name}", hs.game.visitors %></p>
      <% elsif hs.game.visitors == @player.team %>
        <p><%= link_to "vs. #{hs.game.home.name}", hs.game.home %></p>
      <% else %>
        <p>Some Team</p>
      <% end %>
    </div>
    <div class="col-md-10">
      <div class="col-md-6 stats-table">
        <div class="col-md-1">
          <p>-</p>
        </div>
        <div class="col-md-1">
          <p><%= hs.pa %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.ab %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.single + hs.double + hs.triple + hs.hr %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.bb %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.single %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.double %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.triple %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.hr %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.k %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.sac %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.error %></p>
        </div>
      </div>
      <div class="col-md-6 stats-table">
        <div class="col-md-1">
          <p><%= hs.hb %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.rbi %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.r %></p>
        </div>
        <div class="col-md-1">
          <p><%= hs.sb%></p>
        </div>
        <div class="col-md-1">
          <p>-</p>
        </div>
        <div class="col-md-1">
          <p>-</p>
        </div>
        <div class="col-md-1">
          <p>-</p>
        </div>
        <div class="col-md-1">
          <p>-</p>
        </div>
      </div>
    </div>
  <% end %>






</div>
