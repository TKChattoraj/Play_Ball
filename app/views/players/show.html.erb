<%= render partial: 'layouts/standings' %>



<row class='col-md-12 left-margin-10px stats-table'>
  <h2 class='margin-bottom-zero'><%= @player.first_name %></h2>
  <h1 class='margin-top-zero'><%= @player.last_name %></h1>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Hitting</th>
        <th>G</th>
        <th>PA</th>
        <th>AB</th>
        <th>H</th>
        <th>BB</th>
        <th>1B</th>
        <th>2B</th>
        <th>3B</th>
        <th>HR</th>
        <th>K</th>
        <th>SF</th>
        <th>ERR</th>
        <th>HB</th>
        <th>RBI</th>
        <th>R</th>
        <th>SB</th>
        <th>CS</th>
        <th>AVE</th>
        <th>OBP</th>
        <th>SLG</th>
      </tr>
    </thead>

    <tbody>
      <tr class='season-stats'>
        <td class='season-stats'>Season</td>
        <td class='season-stats'><%= @player.hitting_total.g %></td>
        <td class='season-stats'><%= @player.hitting_total.pa %></td>
        <td class='season-stats'><%= @player.hitting_total.ab %></td>
        <td class='season-stats'><%= @player.hitting_total.h %></td>
        <td class='season-stats'><%= @player.hitting_total.bb %></td>
        <td class='season-stats'><%= @player.hitting_total.b1 %></td>
        <td class='season-stats'><%= @player.hitting_total.b2 %></td>
        <td class='season-stats'><%= @player.hitting_total.b3 %></td>
        <td class='season-stats'><%= @player.hitting_total.hr %></td>
        <td class='season-stats'><%= @player.hitting_total.k %></td>
        <td class='season-stats'><%= @player.hitting_total.sf %></td>
        <td class='season-stats'><%= @player.hitting_total.err %></td>
        <td class='season-stats'><%= @player.hitting_total.hb %></td>
        <td class='season-stats'><%= @player.hitting_total.rbi %></td>
        <td class='season-stats'><%= @player.hitting_total.r %></td>
        <td class='season-stats'><%= @player.hitting_total.sb %></td>
        <td class='season-stats'><%= @player.hitting_total.cs %></td>
        <td class='season-stats'><%= number_with_precision(@player.hitting_total.ave, :precision =>3) %></td>
        <td class='season-stats'><%= number_with_precision(@player.hitting_total.obp, :precision => 3) %></td>
        <td class='season-stats'><%= number_with_precision(@player.hitting_total.slg, :precision => 3) %></td>
      </tr>

      <% @player_hitting_stats.each do |hs| %>
      <tr>

        <% if hs.game.home == @player.team %>
          <td><%= link_to "vs. #{hs.game.visitors.name}", hs.game.visitors %></td>
        <% elsif hs.game.visitors == @player.team %>
          <td><%= link_to "vs. #{hs.game.home.name}", hs.game.home %></td>
        <% else %>
          <td>vs Some Team</td>
        <% end %>

        <td>-</td>
        <td><%= hs.pa %></td>
        <td><%= hs.ab %></td>
        <td><%= hs.single + hs.double + hs.triple + hs.hr %></td>
        <td><%= hs.bb %></td>
        <td><%= hs.single %></td>
        <td><%= hs.double %></td>
        <td><%= hs.triple %></td>
        <td><%= hs.hr %></td>
        <td><%= hs.k %></td>
        <td><%= hs.sac %></td>
        <td><%= hs.error %></td>
        <td><%= hs.hb %></td>
        <td><%= hs.rbi %></td>
        <td><%= hs.r %></td>
        <td><%= hs.sb%></td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
      </tr>

      <% end %>

      <% if @player.pitcher? %>
      <tr>
        <td>Pitching:</td>
        <td>W</td>
        <td>L</td>
        <td>IP</td>
        <td>R</td>
        <td>ER</td>
        <td>G</td>
        <td>GS</td>
        <td>SV</td>
        <td>CG</td>
        <td>BF</td>
        <td>BB</td>
        <td>H</td>
        <td>1B</td>
        <td>2B</td>
        <td>3B</td>
        <td>HR</td>
        <td>K</td>
        <td>WP</td>
        <td>HB</td>
        <td>BK</td>
        <td>SB</td>
        <td>ERA</td>
      </tr>

        <% if @player.pitching_total %>
          <tr>
            <td class='season-stats'>Season</td>
            <td class='season-stats'><%= @player.pitching_total.w %></td>
            <td class='season-stats'><%= @player.pitching_total.l %></td>
            <td class='season-stats'><%= @player.pitching_total.ip %></td>
            <td class='season-stats'><%= @player.pitching_total.r %></td>
            <td class='season-stats'><%= @player.pitching_total.er %></td>
            <td class='season-stats'><%= @player.pitching_total.g%></td>
            <td class='season-stats'><%= @player.pitching_total.gs %></td>
            <td class='season-stats'><%= @player.pitching_total.sv %></td>
            <td class='season-stats'><%= @player.pitching_total.cg %></td>
            <td class='season-stats'><%= @player.pitching_total.bf %></td>
            <td class='season-stats'><%= @player.pitching_total.bb %></td>
            <td class='season-stats'><%= @player.pitching_total.h %></td>
            <td class='season-stats'><%= @player.pitching_total.b1 %></td>
            <td class='season-stats'><%= @player.pitching_total.b2 %></td>
            <td class='season-stats'><%= @player.pitching_total.b3 %></td>
            <td class='season-stats'><%= @player.pitching_total.hr %></td>
            <td class='season-stats'><%= @player.pitching_total.k %></td>
            <td class='season-stats'><%= @player.pitching_total.wp %></td>
            <td class='season-stats'><%= @player.pitching_total.hb %></td>
            <td class='season-stats'><%= @player.pitching_total.bk %></td>
            <td class='season-stats'><%= @player.pitching_total.sb %></td>
            <td class='season-stats'><%= number_with_precision(@player.pitching_total.era, :precision =>3) %></td>
          </tr>

          <% @player_pitching_stats.each do |ps| %>
            <tr>
              <% if ps.game.home == @player.team %>
                <td><%= link_to "vs. #{ps.game.visitors.name}", ps.game.visitors %></td>
              <% elsif ps.game.visitors == @player.team %>
                <td><%= link_to "vs. #{ps.game.home.name}", ps.game.home %></td>
              <% else %>
                <td>Some Team</td>
              <% end %>
              <td>-</td>
              <td>-</td>
              <td>-</td>
              <td><%= ps.r %></td>
              <td><%= ps.er %></td>
              <td>-</td>
              <td>-</td>
              <td><%= ps.sv %></td>
              <td><%= ps.cg %></td>
              <td><%= ps.bf %></td>
              <td><%= ps.bb %></td>
              <td><%= ps.h %></td>
              <td><%= ps.single %></td>
              <td><%= ps.double %></td>
              <td><%= ps.triple %></td>
              <td><%= ps.hr %></td>
              <td><%= ps.k %></td>
              <td><%= ps.wp %></td>
              <td><%= ps.hb %></td>
              <td><%= ps.bk %></td>
              <td><%= ps.sb %></td>
              <td>-</td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
</tbody>
</table>
</row>
